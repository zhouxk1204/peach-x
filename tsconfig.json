{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@peach-x/*": ["packages/*"],
      "@peach-x-components": ["packages/components/*"]
    },
    "rootDir": "packages",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["packages", "env.d.ts"]
}
