{
  "name": "peach-x",
  "version": "1.0.15",
  "description": "A Simple, Fast Vue 3 Component Library built with TypeScript",
  "type": "module",
  "main": "./dist/lib/index.cjs",
  "module": "./dist/es/index.mjs",
  "types": "./dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "components/*": [
        "./dist/types/components/*/index.d.ts"
      ],
      "resolver": [
        "./dist/types/resolver/index.d.ts"
      ],
      "theme": [
        "./dist/types/theme/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/es/index.mjs",
      "require": "./dist/lib/index.cjs"
    },
    "./resolver": {
      "types": "./dist/types/resolver/index.d.ts",
      "import": "./dist/es/resolver/index.mjs",
      "require": "./dist/lib/resolver/index.cjs"
    },
    "./components/*": {
      "types": "./dist/types/components/*/index.d.ts",
      "import": "./dist/es/components/*/index.mjs",
      "require": "./dist/lib/components/*/index.cjs"
    },
    "./theme": {
      "types": "./dist/types/theme/index.d.ts",
      "import": "./dist/es/theme/index.mjs",
      "require": "./dist/lib/theme/index.cjs"
    },
    "./theme/*": {
      "default": "./dist/theme/*"
    }
  },
  "files": [
    "dist",
    "global.d.ts"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "docs:dev": "pnpm --filter @peach-x/docs docs:dev",
    "docs:build": "pnpm --filter @peach-x/docs docs:build",
    "play:dev": "pnpm --filter @peach-x/playground dev",
    "build": "tsx scripts/build-css.ts && vite build",
    "gen:dts": "node --loader ts-node/esm scripts/generate-global-dts.ts",
    "version:patch": "npm version patch --no-git-tag-version",
    "release": "pnpm run version:patch && pnpm run build && pnpm publish --no-git-checks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhouxk1204/peach-x.git"
  },
  "homepage": "www.peach-x.com",
  "keywords": [
    "vue3",
    "component",
    "ui",
    "peach-x"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "author": "zhouxk",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.15.18",
    "@vitejs/plugin-vue": "^5.2.4",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cssnano": "^7.0.7",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "sass": "^1.89.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "unplugin-auto-import": "^19.2.0",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  }
}
